<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SocialMediaApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:SocialMediaApp.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="SocialMediaApp"
    Shell.BackgroundColor="{StaticResource Primary}"
    Shell.ForegroundColor="White" 
    Shell.NavBarHasShadow="True"
    Shell.TitleColor="White">

    <ShellContent
        Title="OnboardingPage"
        ContentTemplate="{DataTemplate pages:OnboardingPage}"
        Route="OnboardingPage"
        />
    <!--ShellContent
        Title="Test Page"
        ContentTemplate="{DataTemplate pages:TestPage}"
        Route="TestPage"
        />-->
    <ShellContent
       Title="Login Page"
       ContentTemplate="{DataTemplate pages:LoginPage}"
       Route="LoginPage"
       />
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="HomePage" />

</Shell>
